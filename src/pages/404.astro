---
import OSLayout from '@layouts/OSLayout.astro';
---

<OSLayout title="404 — Frosty Neon">
  <section class="min-h-dvh flex flex-col items-center justify-center gap-6 px-6 relative overflow-hidden">
    <!-- Ambient glow -->
    <div class="absolute inset-0 pointer-events-none" aria-hidden="true">
      <div class="absolute top-1/3 left-1/3 w-[400px] h-[400px] rounded-full bg-neon-rose/[0.04] blur-[100px]"></div>
      <div class="absolute bottom-1/3 right-1/3 w-[300px] h-[300px] rounded-full bg-neon-violet/[0.05] blur-[80px]"></div>
    </div>
    <div class="relative z-10 flex flex-col items-center gap-6">
      <h1 class="font-display text-[10rem] font-bold text-frost/[0.04] leading-none select-none">404</h1>
      <div class="-mt-20">
        <p class="font-mono text-lg text-frost/40 text-center">Signal lost. Page not found.</p>
        <p class="font-mono text-xs text-frost/20 text-center mt-2">The frequency you're looking for doesn't exist.</p>
      </div>
      <a
        href="/"
        class="mt-4 px-6 py-2.5 font-mono text-sm text-neon-cyan border border-neon-cyan/30
               rounded-lg hover:shadow-neon-cyan hover:bg-neon-cyan/5 transition-all"
      >
        ← Return to Terminal
      </a>
    </div>
  </section>
</OSLayout>
